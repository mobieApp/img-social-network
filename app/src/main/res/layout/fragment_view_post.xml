<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp">
        <include layout="@layout/layout_post_header" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/IVPost"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/img1"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="7dp">
        <include layout="@layout/layout_post_toolbars"/>
        <TextView
            android:id="@+id/TVLikes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="125 lượt thích"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/TVPostDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="enjoy cái moment này"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/textViewComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xem tất cả bình luận"/>
        <TextView
            android:id="@+id/timestampPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="1 ngày trước"/>
    </LinearLayout>
</LinearLayout>